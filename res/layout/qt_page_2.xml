<com.madhackerdesigns.neverbelate.ui.EdgeScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent" >

	<LinearLayout
	    android:layout_height="wrap_content"
	    android:layout_width="match_parent"
	    android:orientation="vertical"
	    style="@style/QuickTourPage" >
	    
	   <TextView 
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:text="@string/qt_searchable_header"
	        style="@style/QuickTourHeader" />
	    
	    <TextView 
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:text="@string/qt_searchable_message_1"
	        style="@style/QuickTourMessage" />
	    
	    <!-- WHERE -->
	    <LinearLayout android:id="@+id/where_row"
	        android:orientation="vertical"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="6dip"
	        android:focusable="true">
	        <TextView
			    android:layout_height="wrap_content"
			    android:layout_marginBottom="5dip"
			    android:layout_marginLeft="8dip"
			    android:layout_marginRight="8dip"
			    android:layout_width="match_parent"
			    android:paddingLeft="8dip"
			    android:paddingRight="8dip"
			    android:text="@string/qt_where"
			    android:textSize="18sp"
			    android:textStyle="bold" />
	        <EditText
	            android:id="@+id/location"
	            android:editable="false"
	            android:inputType="textPostalAddress"
	            android:focusable="false"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:layout_marginBottom="10dip"
	            android:layout_width="match_parent"
	            android:maxLines="2"
	            android:minHeight="48dip"
	            android:singleLine="false"
	            android:text="@string/qt_sample_location"
	            style="@style/TextAppearance.EditEvent_Value" />
	    <View
	        style="@style/EditEventSeparator"/>
	    </LinearLayout>
	    
	    <TextView 
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:text="@string/qt_searchable_message_2"
	        style="@style/QuickTourMessage" />
	    
	</LinearLayout>

</com.madhackerdesigns.neverbelate.ui.EdgeScrollView>